@using DBContext;
@model Articulos
@{ ViewData["Title"] = "Agregar Articulo"; }

<h1>@ViewData["Title"]</h1>

@if (!ViewData.ModelState.IsValid)
{
<div class="alert alert-danger">
    Favor revisar la informacion solicitada
</div>}

<div class="row">
    <div class="col-6">
        <form method="post" autocomplete="off">

            <div class="form-group">
                <label for="CodigoArticulo">Codigo</label>
                <input asp-for="CodigoArticulo" class="form-control" />
                <span asp-validation-for="CodigoArticulo" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label for="Nombre">Nombre</label>
                <input asp-for="NombreArticulo" class="form-control" />
                <span asp-validation-for="NombreArticulo" class="text-danger small"></span>
            </div>


            <div class="form-group">
                <label>Estado:</label>

                <select asp-for="EstadoActivo" class="form-control">
                    <option value="">Seleccione</option>
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>

                </select>
            </div>
